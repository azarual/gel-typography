{
  "name": "gel-typography",
  "version": "1.0.0-beta",
  "description": "A flexible code implementation of the GEL Typography",
  "main": "_typography.scss",
  "scripts": {
    "test": "node-sass test/test.scss test/test.css --output-style=expanded --sourcemap=none && diff -u test/test-expected.css test/test.css",
    "dist": "node-sass dist/gel-typography.scss dist/gel-typography.min.css --output-style=compressed --sourcemap=none"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bbc/gel-typography.git"
  },
  "keywords": [
    "bbc",
    "gel",
    "typography"
  ],
  "ignore": [
    "**/.*",
    "node_modules",
    "bower_components",
    "test",
    "tests",
    "dist"
  ],
  "author": "BBC",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bbc/gel-typography/issues"
  },
  "homepage": "https://github.com/bbc/gel-typography",
  "devDependencies": {
    "node-sass": "^3.2.0",
    "sass-mq": "^3.2.2"
  },
  "dependencies": {
    "gel-sass-tools": "git+ssh://git@github.com:bbc/gel-sass-tools.git#^1.0.0"
  }
}
